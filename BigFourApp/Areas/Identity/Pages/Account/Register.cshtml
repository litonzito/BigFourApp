@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 420px; border-radius: 1rem;">

        <h2 class="text-center mb-4 fw-bold">Crear Cuenta</h2>

        <form id="registerForm" method="post">

            <!-- EMAIL -->
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="correo@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <!-- PASSWORD -->
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                <input asp-for="Input.Password" class="form-control form-control-lg" type="password" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <!-- CONFIRM PASSWORD -->
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="••••••••" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- EVENT MANAGER OPTION -->
            <div class="form-check mb-3">
                <input asp-for="Input.IsEventManager" class="form-check-input" />
                <label asp-for="Input.IsEventManager" class="form-check-label fw-semibold">
                    Registrarme como Event Manager
                </label>
            </div>

            <!-- SUBMIT -->
            <button type="submit" class="btn btn-primary btn-lg w-100 mt-2" style="border-radius: .5rem;">
                Crear Cuenta
            </button>

        </form>

        <!-- LOGIN LINK -->
        <div class="text-center mt-4">
            <p class="text-muted mb-0">¿Ya tienes una cuenta?</p>
            <a href="/Identity/Account/Login" class="fw-semibold">Iniciar sesión</a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
