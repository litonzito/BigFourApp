@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 420px; border-radius: 1rem;">
        
        <h2 class="text-center mb-4 fw-bold">Iniciar Sesión</h2>

        <form method="post">

            <!-- EMAIL -->
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="correo@example.com"/>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <!-- PASSWORD -->
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                <input asp-for="Input.Password" class="form-control form-control-lg" type="password" placeholder="••••••••"/>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <!-- REMEMBER ME -->
            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input"/>
                <label asp-for="Input.RememberMe" class="form-check-label"></label>
            </div>

            <!-- SUBMIT BUTTON -->
            <button type="submit" class="btn btn-primary btn-lg w-100 mt-2" style="border-radius: .5rem;">
                Entrar
            </button>

        </form>

        <!-- REGISTER LINK -->
        <div class="text-center mt-4">
            <p class="text-muted mb-0">¿No tienes una cuenta?</p>
            <a href="/Identity/Account/Register" class="fw-semibold">Crear una cuenta</a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
