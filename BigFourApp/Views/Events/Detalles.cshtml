@model BigFourApp.Models.Event.Evento
@{
    ViewData["Title"] = "Detalles del evento";

    var defaultImage = "https://media.discordapp.net/attachments/1376526490480676905/1428840726589870112/07_02_21_1253437873_AAB_560x292.jpg?ex=68f3f71f&is=68f2a59f&hm=545af6c4aa069b4ae978be52a6ccdeee14ac29fe0ee393c399db22e004f495a0&=&format=webp";
    var imageUrl = string.IsNullOrWhiteSpace(Model.EventImageUrl)
    ? Url.Content("~/images/seatmap.png")
    : Model.EventImageUrl;
}

<div class="text-center mb-4">
    <h1 class="display-4">@Model.Name</h1>
</div>

<div class="text-center mb-4">
    <img src="@imageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-width:400px;" />
</div>

<div class="list-group mb-4">
    @if (Model.Venues.Any())
    {
        var v = Model.Venues.First();
        <div class="list-group-item">
            <strong>Lugar:</strong> @v.Name, @v.City, @v.State
        </div>
    }

    <div class="list-group-item">
        <strong>Fecha:</strong> @Model.Date.ToString("yyyy-MM-dd")
    </div>

    @if (Model.Classifications.Any())
    {
        var c = Model.Classifications.First();
        <div class="list-group-item">
            <strong>Categor√≠a:</strong> @c.Segment - @c.Genre - @c.SubGenre
        </div>
    }
</div>

<div class="text-center mb-3">
    <a asp-controller="Seat" asp-action="Index" asp-route-id="@Model.Id_Evento" class="btn btn-success me-2">
        Comprar boletos
    </a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
        Volver al inicio
    </a>
</div>
