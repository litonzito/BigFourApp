@model BigFourApp.Models.Event.Evento
@{
    ViewData["Title"] = "Checkout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h1 class="h3 mb-3">Checkout Placeholder</h1>
                    <p class="text-muted">
                        Checkout pending for.
                        <strong>@Model.Name</strong> .
                    </p>
                    <div class="mb-3">
                        <div class="fw-semibold">Event summary</div>
                        <div class="text-muted small">Event Id: @Model.Id_Evento</div>
                    </div>
                    <a asp-action="Index" asp-controller="Seat" asp-route-id="@Model.Id_Evento" class="btn btn-outline-primary me-2">
                        Back to seat selection
                    </a>
                    <a asp-controller="Events" asp-action="Detalles" asp-route-id="@Model.Id_Evento" class="btn btn-outline-secondary">
                        View event details
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
