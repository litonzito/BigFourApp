@model BigFourApp.Models.ViewModels.SeatSelectionViewModel

@{
    ViewData["Title"] = "Revisión y pago";
    var seatError = TempData["SeatError"] as string;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h1 class="h4 mb-2">Revisión y pago — @Model.EventName</h1>
                    @if (!string.IsNullOrWhiteSpace(Model.VenueName))
                    {
                        <p class="text-muted">@Model.VenueName — @($"{Model.City}, {Model.State}".Trim().Trim(','))</p>
                    }

                    @if (!string.IsNullOrWhiteSpace(seatError))
                    {
                        <div class="alert alert-danger" role="alert">
                            @seatError
                        </div>
                    }

                    <div class="alert alert-warning" role="alert">
                        ⚠️ <strong>Precaución:</strong> al confirmar la compra, ya no podrás modificar tu selección de asientos.
                    </div>

                    <h5 class="fw-semibold mt-3 mb-3">Asientos seleccionados</h5>
                    <table class="table table-sm align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Asiento</th>
                                <th class="text-end">Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td>@item.Label</td>
                                    <td class="text-end">$@item.Price.ToString("0.00")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between fw-bold mt-3">
                        <span>Total</span>
                        <span>@Model.Subtotal.ToString("C")</span>
                    </div>

                    <hr />

                    <!-- Form principal: envía TODO a ConfirmPurchase -->
                    <form method="post"
                          asp-controller="Checkout"
                          asp-action="ConfirmPurchase"
                          class="mt-3 needs-validation"
                          novalidate>
                        <!-- Identificador del evento -->
                        <input type="hidden" name="eventId" value="@Model.EventId" />

                        <!-- TODOS los asientos -->
                        @foreach (var it in Model.CartItems)
                        {
                            <input type="hidden" name="seatIds" value="@it.SeatId" />
                        }

                        <!-- Datos del comprador -->
                        <h5 class="fw-semibold mt-3 mb-2">Datos del comprador</h5>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Nombre</label>
                                <input class="form-control" type="text" name="nombre" placeholder="Juan" required />
                                <div class="invalid-feedback">Ingresa tu nombre.</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Apellido</label>
                                <input class="form-control" type="text" name="apellido" placeholder="Pérez" required />
                                <div class="invalid-feedback">Ingresa tu apellido.</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Método de pago</label>
                                <select class="form-select" name="metodoPago" required>
                                    <option value="">Seleccionar...</option>
                                    <option value="Tarjeta de crédito">Tarjeta de crédito</option>
                                    <option value="Tarjeta de débito">Tarjeta de débito</option>
                                    <option value="PayPal">PayPal</option>
                                </select>
                                <div class="invalid-feedback">Selecciona un método de pago.</div>
                            </div>
                        </div>

                        <!-- Datos de tarjeta -->
                        <h5 class="fw-semibold mt-3 mb-2">Datos de tarjeta</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Número de tarjeta</label>
                                <input class="form-control"
                                       type="text"
                                       name="cardNumber"
                                       inputmode="numeric"
                                       maxlength="19"
                                       placeholder="4111 1111 1111 1111"
                                       required />
                                <div class="invalid-feedback">Ingresa un número de tarjeta válido.</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Nombre en la tarjeta</label>
                                <input class="form-control"
                                       type="text"
                                       name="cardName"
                                       placeholder="JUAN PEREZ"
                                       required />
                                <div class="invalid-feedback">Ingresa el nombre impreso en la tarjeta.</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Mes</label>
                                <input class="form-control"
                                       type="text"
                                       name="expiryMonth"
                                       inputmode="numeric"
                                       maxlength="2"
                                       placeholder="MM"
                                       required />
                                <div class="invalid-feedback">Ingresa el mes (MM).</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Año</label>
                                <input class="form-control"
                                       type="text"
                                       name="expiryYear"
                                       inputmode="numeric"
                                       maxlength="4"
                                       placeholder="YYYY"
                                       required />
                                <div class="invalid-feedback">Ingresa el año (YYYY).</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">CVV</label>
                                <input class="form-control"
                                       type="password"
                                       name="cvv"
                                       inputmode="numeric"
                                       maxlength="4"
                                       placeholder="***"
                                       required />
                                <div class="invalid-feedback">Ingresa el CVV.</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                Cancelar compra
                            </a>
                            <button type="submit" class="btn btn-success">
                                Confirmar compra
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/checkout.js" asp-append-version="true"></script>
}
